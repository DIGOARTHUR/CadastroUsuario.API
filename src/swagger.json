{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "description": "This is an application for listing and create users",
    "version": "1.0.0",
    "contact": {
      "email": "digo.arthur@hotmail.com"
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "User management"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "To create a new user, add the 'name' and 'email' fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": ["name", "email"],
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": "string"
                },
                "example": {
                  "name": "Example",
                  "email": "example@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "List all users if the user is an admin.",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "User is not an administrator"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user profile by ID",
        "description": "To list a user you need the route param 'user_id'",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn an user as admin",
        "description": "To update the user, you need the route param 'user_id'",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    }
  }
}
